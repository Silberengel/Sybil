{
    "name": "sybil/sybil",
    "description": "A tool for creating and publishing Nostr events",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Sybil\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sybil\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.0",
        "swentel/nostr-php": "^1.0",
        "ext-yaml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "bin": [
        "bin/sybil",
        "bin/sybil.bat"
    ],
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit"
    }
}
